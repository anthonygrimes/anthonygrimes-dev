---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
    <div class="flex grow">
        <div class="w-full mt-4 mb-8 mx-4 sm:mx-auto sm:w-3/4 lg:w-1/2">
            <form action="https://api.web3forms.com/submit" method="POST" id="form">
                <fieldset>
                    <h1 class="text-2xl font-bold my-4">
                        Get in touch
                    </h1>

                    <input type="hidden" name="access_key" value="9a39d952-c5c8-47e6-acbc-9d02c87a9088"/>
                    <input type="hidden" name="subject" value="Contact Form"/>
                    <input type="hidden" name="redirect" value="https://anthonygrimes.dev/thankyou"/>
                    <input type="checkbox" name="botcheck" id="" class="hidden"/>

                    <div class="my-4">
                        <label for="names" class="block text-base">Name</label>
                        <div class="my-2">
                            <input type="text" name="names" id="names"
                                   class="block w-full rounded-md bg-white px-3 py-1.5 text-base outline-1 -outline-offset-1 outline-neutral-400 placeholder:text-neutral-400 focus:outline-2 focus:-outline-offset-2 focus:outline-neutral-500"
                                   placeholder="Billy Branson">
                        </div>
                    </div>

                    <div class="my-4">
                        <label for="email" class="block text-base">Email</label>
                        <div class="my-2">
                            <input type="email" name="email" id="email"
                                   class="block w-full rounded-md bg-white px-3 py-1.5 text-base outline-1 -outline-offset-1 outline-neutral-400 placeholder:text-neutral-400 focus:outline-2 focus:-outline-offset-2 focus:outline-neutral-500"
                                   placeholder="you@example.com">
                        </div>
                    </div>

                    <div class="my-4">
                        <label for="message" class="block text-base">Message</label>
                        <div class="my-2">
                        <textarea rows="4"
                                  name="message"
                                  id="message"
                                  class="block w-full resize-none rounded-md bg-white px-3 py-1.5 text-base outline-1 -outline-offset-1 outline-neutral-400 placeholder:text-neutral-400 focus:outline-2 focus:-outline-offset-2 focus:outline-neutral-500"
                                  placeholder="Be kind, rewind."
                                  required></textarea>
                        </div>
                    </div>

                    <button type="submit"
                            class="text-white my-4 rounded-md bg-storm hover:bg-storm-light hover:cursor-pointer px-3 py-2 text-sm font-semibold shadow-xs focus-visible:outline-2 focus-visible:outline-offset-2">
                        Submit
                    </button>

                </fieldset>
            </form>
        </div>
    </div>
</BaseLayout>